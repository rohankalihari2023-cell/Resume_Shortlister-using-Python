[1mnew file mode 100644[m
[1mindex 0000000..5932d8a[m
[1m--- /dev/null[m
[1m+++ b/app.py[m
[36m@@ -0,0 +1,91 @@[m
[32m+[m[32mimport os[m
[32m+[m[32mimport shutil[m
[32m+[m[32mfrom flask import Flask, render_template, request, send_from_directory[m
[32m+[m[32mimport PyPDF2[m
[32m+[m[32mfrom docx import Document[m
[32m+[m
[32m+[m[32mapp = Flask(__name__)[m
[32m+[m
[32m+[m[32mUPLOAD_FOLDER = "uploads"[m
[32m+[m[32mSHORTLIST_FOLDER = "shortlisted_resumes"[m
[32m+[m
[32m+[m[32mos.makedirs(UPLOAD_FOLDER, exist_ok=True)[m
[32m+[m[32mos.makedirs(SHORTLIST_FOLDER, exist_ok=True)[m
[32m+[m
[32m+[m[32mapp.config["UPLOAD_FOLDER"] = UPLOAD_FOLDER[m
[32m+[m[32mapp.config["SHORTLIST_FOLDER"] = SHORTLIST_FOLDER[m
[32m+[m
[32m+[m[32m# Required skills for shortlisting[m
[32m+[m[32mREQUIRED_SKILLS = ["python", "matplotlib", "pandas", "machine learning", "sql"][m
[32m+[m
[32m+[m[32mdef extract_text(file_path):[m
[32m+[m[32m    """Extract text from PDF or DOCX"""[m
[32m+[m[32m    if file_path.endswith(".pdf"):[m
[32m+[m[32m        text = ""[m
[32m+[m[32m        with open(file_path, "rb") as f:[m
[32m+[m[32m            reader = PyPDF2.PdfReader(f)[m
[32m+[m[32m            for page in reader.pages:[m
[32m+[m[32m                text += page.extract_text() or ""[m
[32m+[m[32m        return text.lower()[m
[32m+[m
[32m+[m[32m    elif file_path.endswith(".docx"):[m
[32m+[m[32m        doc = Document(file_path)[m
[32m+[m[32m        return " ".join([p.text for p in doc.paragraphs]).lower()[m
[32m+[m[32m    else:[m
[32m+[m[32m        return ""[m
[32m+[m
[32m+[m[32mdef shortlist_resume(text):[m
[32m+[m[32m    """Return matched skills from text"""[m
[32m+[m[32m    return [skill for skill in REQUIRED_SKILLS if skill in text][m
[32m+[m
[32m+[m[32m@app.route("/", methods=["GET", "POST"])[m
[32m+[m[32mdef index():[m
[32m+[m[32m    if request.method == "POST":[m
[32m+[m[32m        uploaded_file = request.files["resume"][m
[32m+[m[32m        if uploaded_file.filename != "":[m
[32m+[m[32m            file_path = os.path.join(app.config["UPLOAD_FOLDER"], uploaded_file.filename)[m
[32m+[m[32m            uploaded_file.save(file_path)[m
[32m+[m
[32m+[m[32m            # Extract text and check skills[m
[32m+[m[32m            text = extract_text(file_path)[m
[32m+[m[32m            matched_skills = shortlist_resume(text)[m
[32m+[m
[32m+[m[32m            # Calculate percentage match[m
[32m+[m[32m            total = len(REQUIRED_SKILLS)[m
[32m+[m[32m            matched = len(matched_skills)[m
[32m+[m[32m            percentage = (matched / total) * 100[m
[32m+[m
[32m+[m[32m            shortlisted = percentage >= 75[m
[32m+[m
[32m+[m[32m            # If shortlisted â†’ move to shortlisted_resumes folder[m
[32m+[m[32m            if shortlisted:[m
[32m+[m[32m                dest_path = os.path.join(app.config["SHORTLIST_FOLDER"], uploaded_file.filename)[m
[32m+[m[32m                shutil.copy(file_path, dest_path)[m
[32m+[m
[32m+[m[32m            return render_template([m
[32m+[m[32m                "results.html",[m
[32m+[m[32m                filename=uploaded_file.filename,[m
[32m+[m[32m                skills=matched_skills,[m
[32m+[m[32m                total=total,[m
[32m+[m[32m                matched=matched,[m
[32m+[m[32m                percentage=percentage,[m
[32m+[m[32m                shortlisted=shortlisted[m
[32m+[m[32m            )[m
[32m+[m
[32m+[m[32m    return render_template("index.html")[m
[32m+[m
[32m+[m
[32m+[m[32m@app.route("/dashboard")[m
[32m+[m[32mdef dashboard():[m
[32m+[m[32m    """Show all shortlisted resumes"""[m
[32m+[m[32m    files = os.listdir(app.config["SHORTLIST_FOLDER"])[m
[32m+[m[32m    return render_template("dashboard.html", files=files)[m
[32m+[m
[32m+[m[32m@app.route("/download/<filename>")[m
[32m+[m[32mdef download_file(filename):[m
[32m+[m[32m    """Allow HR to download shortlisted resumes"""[m
[32m+[m[32m    return send_from_directory(app.config["SHORTLIST_FOLDER"], filename, as_attachment=True)[m
[32m+[m
[32m+[m
[32m+[m[32mif __name__ == "__main__":[m
[32m+[m[32m    app.run(debug=True)[m
